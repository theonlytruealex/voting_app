<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_txt"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="20dp" />

        <!-- Vote Subject -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject_prompt_txt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/vote_subject_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/subject_prompt_txt"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Options Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/option_1_txt"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/option_2_txt"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/add_option_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_option_btn"
                android:textSize="14sp"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <!-- Multiple Selection Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/section_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/checkboxes_switch_text"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/multiple_selection_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Network Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voting_method_txt"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/choices_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/section_background"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/lan_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lan_choice_txt"
                    android:textSize="14sp"
                    android:padding="8dp" />

                <RadioButton
                    android:id="@+id/local_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/local_choice_txt"
                    android:textSize="14sp"
                    android:padding="8dp" />

            </RadioGroup>


        <!-- Continue Button -->
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_button"
            android:textSize="16sp"
            android:textStyle="bold"
            android:enabled="false"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>