<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/lan_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/voter_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voter 1"
        android:textSize="16sp"
        android:visibility="gone"
        android:paddingBottom="12dp" />

    <LinearLayout
        android:id="@+id/lan_options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/cast_vote_button"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="Cast Vote"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/waiting_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for vote start"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

</LinearLayout>
